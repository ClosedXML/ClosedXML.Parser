@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">ClosedParser</h1>
    <p>ClosedParser is a sub-project of a ClosedXML library dedicated to parsing a formula into an abstract syntax tree.</p>

    <form>
        <button type="button" onclick="document.getElementById('formula').value = ''">Clear</button>
        <input type="text" id="formula" value="SUM(B5,2)" size="60" />
        <button id="parse" type="button">Parse</button>
        <select id="mode">
            <option value="A1">A1</option>
            <option value="R1C1">R1C1</option>
        </select>
    </form>

    <div id="svg-container">
    </div>
</div>
